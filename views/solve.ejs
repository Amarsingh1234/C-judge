    <div class="card-header" style="margin-top: 8%; background-color:honeydew; margin-right: 4%;margin-left: 4%;">
      <h4 class="card-title"><b><%=question.title%></b></h4>
      <p style="text-align: justify;">
        <%=question.problem_statement%>
      </p>
      <h6><b>Input Format</b></h6>
      <p>
        <%=question.input_format%>
      </p>
      <h6><b>Output Format</b></h6>
